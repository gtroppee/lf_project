<%= form_for @survey do |f| %>

  <div class="form-group">
    <%= f.label :title, 'Titre' %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :user_name, 'Nom de l\'utilisateur' %><br>
    <%= f.text_field :user_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :user_email, 'Email de l\'utilisateur' %><br>
    <%= f.text_field :user_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :comment, 'Commentaire' %><br>
    <%= f.text_area :comment, class: 'form-control' %>
  </div>

  <%= f.submit 'Valider', class: 'btn btn-lg btn-block btn-primary' %>

<% end %>